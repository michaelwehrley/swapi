{
  "name": "swapi",
  "version": "1.0.0",
  "description": "A simple library used to request and display StarWars info",
  "main": "src/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "lint": "./node_modules/.bin/eslint .",
    "watch:test": "./node_modules/.bin/mocha --watch",
    "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha",
    "validate": "npm-run-all --parallel lint test build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelwehrley/swapi.git"
  },
  "keywords": [
    "SWAPI",
    "Star Wars API"
  ],
  "author": "Michael S. Wehrley <michael.wehrley@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michaelwehrley/swapi/issues"
  },
  "homepage": "https://github.com/michaelwehrley/swapi#readme",
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-es2015": "6.24.1",
    "chai": "4.0.2",
    "eslint": "4.0.0",
    "ghooks": "2.0.0",
    "mocha": "3.4.2",
    "npm-run-all": "4.0.2",
    "nyc": "11.0.2",
    "rimraf": "2.6.1"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
